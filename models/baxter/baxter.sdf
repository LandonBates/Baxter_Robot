<sdf version='1.9'>
  <model name='Baxter'>
    <pose>0 0 0 0 0 0</pose>
    <link name='base_link'>
      <pose relative_to='__model__'>0 0 0.93 0 -0 0</pose>
        <visual name='visual'>
          <geometry>
            <mesh>
              <uri>file://models/baxter/meshes/PEDESTAL.DAE</uri>
            </mesh>
          </geometry>
        </visual>
        <collision name = 'base_collision'>
          <pose relative_to='base_link'>0 0 -1 0 0 0</pose>
          <geometry>
            <box>
              <size>1 1 1</size>
            </box>
          </geometry>
        </collision>
      </link>
      <link name='body'>
        <pose relative_to='base_link'>0 0 0 0 0 0</pose>
        <visual name='visual'>
          <geometry>
            <mesh>
              <uri>file://models/baxter/meshes/base_link.DAE</uri>
            </mesh>
          </geometry>
        </visual>
        <inertial>
          <mass>1000</mass>
          <inertia>
            <ixx>1</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>1</iyy>
            <iyz>0</iyz>
            <izz>1</izz>
          </inertia>
        </inertial>
      </link>
      <link name='chin'>
        <pose relative_to='base_link'>0.065 0 0.685 0 0 0</pose>
        <visual name='visual'>
          <geometry>
            <mesh>
              <uri>file://models/baxter/meshes/H0.DAE</uri>
            </mesh>
          </geometry>
        </visual>
        <inertial>
          <mass>1</mass>
          <inertia>
            <ixx>0.003</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.001</iyy>
            <iyz>0</iyz>
            <izz>0.003</izz>
          </inertia>
        </inertial>
      </link>
      <link name='head'>
        <pose relative_to='base_link'>0.15 -0 0.69 1.5 -0.3 -0</pose>
        <visual name='visual'>
          <geometry>
            <mesh>
              <uri>file://models/baxter/meshes/H1.DAE</uri>
            </mesh>
          </geometry>
        </visual>
        <inertial>
          <mass>1</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.06</iyy>
            <iyz>0</iyz>
            <izz>0.06</izz>
          </inertia>
        </inertial>
      </link>
      <joint name='body_joint' type='fixed'>
			  <parent>base_link</parent>
			  <child>body</child>
		  </joint>
      <joint name='chin_joint' type='revolute'>
			  <parent>body</parent>
			  <child>chin</child>
			<axis>
				<xyz>0 0 1</xyz>
				<limit>
				  <upper>1.6</upper>
				  <lower>-1.6</lower>
				</limit>
				<dynamics>
				  <friction>1</friction>
				</dynamics>
			</axis>     
		  </joint>
		  <joint name='head_joint' type='revolute'>
			  <parent>chin</parent>
			  <child>head</child>
			  <axis>
			    <xyz>0 0 1</xyz>
			    <limit>
			      <upper>0.1</upper>
			      <lower>-0.5</lower>
			    </limit>
			    <dynamics>
				    <friction>1</friction>
				  </dynamics>
			  </axis>
		  </joint>
		<link name='camera_body'>
		  <pose relative_to='head'>0.055 0.08 0 -1.57 -0.2 0</pose>
		  <visual name='visual'>
			  <pose>0 0 0 0 0 0</pose>
			  <geometry>
				  <cylinder>
					  <radius>0.01</radius>
					  <length>0.01</length>
				  </cylinder>
			  </geometry>
		  </visual>
		  <sensor name="camera" type="camera">
			  <camera>
				  <pose>0 0 0 0 0 0</pose>
				  <horizontal_fov>1.047</horizontal_fov>
				  <image>
					  <width>800</width>
					  <height>600</height>
				  </image>
				  <clip>
					  <near>0.1</near>
					  <far>100</far>
				  </clip>
				  <optical_frame_id>camera</optical_frame_id>
			  </camera>
			  <always_on>1</always_on>
			  <update_rate>30</update_rate>
			  <visualize>true</visualize>
			  <topic>camera</topic>
		  </sensor>
	  </link>
	  <link name='camera'>
		  <pose relative_to="camera_body">0 0 0 0 1.57 0</pose>
	  </link>
	  <joint name='camera_optical_joint' type='fixed'>
		  <parent>camera_body</parent>
		  <child>camera</child>
	  </joint>
	  <joint name='camera_to_head' type='fixed'>
		  <parent>head</parent>
		  <child>camera_body</child>
	  </joint>
	<plugin
        filename="gz-sim-joint-position-controller-system"
        name="gz::sim::systems::JointPositionController">
        <joint_name>chin_joint</joint_name>
        <topic>pan_cmd</topic>
        <p_gain>1</p_gain>
        <i_gain>0.1</i_gain>
        <d_gain>0.1</d_gain>
        <i_max>1</i_max>
        <i_min>-1</i_min>
        <cmd_max>1000</cmd_max>
        <cmd_min>-1000</cmd_min>
      </plugin>
	<plugin
        filename="gz-sim-joint-position-controller-system"
        name="gz::sim::systems::JointPositionController">
        <joint_name>head_joint</joint_name>
        <topic>tilt_cmd</topic>
        <p_gain>1</p_gain>
        <i_gain>0.1</i_gain>
        <d_gain>0.1</d_gain>
        <i_max>1</i_max>
        <i_min>-1</i_min>
        <cmd_max>1000</cmd_max>
        <cmd_min>-1000</cmd_min>
      </plugin>
  <plugin 
        filename="gz-sim-joint-state-publisher-system" 
        name="gz::sim::systems::JointStatePublisher"/>
  </model>
</sdf>
